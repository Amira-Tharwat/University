@model CourseViewModel

@{
    Layout = "_UniLayout";
}


<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Adding Course</span>
        </div>

        <div>
            <form method="post" asp-action="Create" class="row">
                <div class="mb-3">
                    <label asp-for="Course.Name" for="" class="form-label">Course Name</label>
                    <input type="text"
                           asp-for="Course.Name"
                           class="form-control"
                           placeholder="" /><span asp-validation-for="Course.Name" class="text-danger"></span>

                </div>
                
               

                <div class="mb-3 col-lg-6">
                    <label asp-for="Course.PID" for="" class="form-label">Professor</label>
                    <select class="form-select "
                            asp-for="Course.PID">
                        <option selected>Select one</option>

                        @{
                            foreach (var prof in Model.professors)
                            {
                                <option value=@prof.Id>@prof.Name</option>
                            }
                        }

                    </select>
                </div>



                <div class="col-lg-12 d-flex justify-content-center  ">

                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </form>

        </div>
    </div>
</div>