@model CourseViewModel

@{
    Layout = "_UniLayout";
}


<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Editing Course</span>
        </div>

        <div>
            <form method="post" asp-action="Update" class="row">
                <div class="mb-3">
                    <label asp-for="Course.Name" for="" class="form-label">Product Name</label>
                    <input type="text"
                           asp-for="Course.Name"
                           value="@Model.Course.Name"
                           class="form-control"
                           placeholder="" />

                </div>
                <input type="number" asp-for="Course.Id" hidden />
               

                <div class="mb-3 col-lg-6">
                    <label asp-for="Course.PID" for="" class="form-label">company</label>
                    <select class="form-select "
                            asp-for="Course.PID">
                        @{

                            foreach (var prof in Model.professors)
                            {
                                int pId = Model.Course.PID;
                                if (pId == prof.Id)
                                {
                                    <option value=@prof.Id selected>@prof.Name</option>
                                }
                                else
                                {
                                    <option value=@prof.Id>@prof.Name</option>
                                }

                            }

                        }


                    </select>
                </div>



                <div class="col-lg-12 d-flex justify-content-center  ">

                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </form>

        </div>
    </div>
</div>